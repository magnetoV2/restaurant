                            DockPanel.Dock="Top"
                            VerticalAlignment="Top"
                            CornerRadius ="10"
                            Margin="20,20,20,0"
                            BorderBrush="{StaticResource CartBlueBrush}"
                            BorderThickness="1"
                            Background="{StaticResource CartBlueBrush}"
                            Height="180">
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <StackPanel>
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Restaurant_Pos;component/Resources/Images/Icons/lclock/clock (3).png" Width="15" Height="15" />
                                            <TextBlock x:Name="SessionClose_User_Start_Time" FontFamily="{StaticResource Base_Regular}" Foreground="White" VerticalAlignment="Center" Margin="6,0,0,0">
                                            11th Nov 2018 06:00 AM
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock FontFamily="{StaticResource Base_Regular}" Foreground="White" Text=" |" />
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Clock" Foreground="White" VerticalAlignment="Center" />
                                            <TextBlock x:Name="SessionClose_User_End_Time" FontFamily="{StaticResource Base_Regular}" Foreground="White" VerticalAlignment="Center" Margin="6,0,0,0">
                                            11th Nov 2018 06:00 AM
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                                        <TextBlock x:Name="SessionClose_User_Total_Time_inDays" FontFamily="{StaticResource Base_Regular}" Foreground="White" VerticalAlignment="Bottom" FontSize="40" Margin="0,0,0,-10">12</TextBlock>
                                        <TextBlock x:Name="SessionClose_User_Total_Time_inDay_lable" FontFamily="{StaticResource Base_Regular}" Foreground="White" VerticalAlignment="Bottom"  Margin="2,0,0,0">days</TextBlock>
                                        <TextBlock x:Name="SessionClose_User_Total_Time_inHours" FontFamily="{StaticResource Base_Regular}" Foreground="White" VerticalAlignment="Bottom" FontSize="40" Margin="10,0,0,-10">11</TextBlock>
                                        <TextBlock x:Name="SessionClose_User_Total_Time_inHour_lable" FontFamily="{StaticResource Base_Regular}" Foreground="White" VerticalAlignment="Bottom"  Margin="2,0,0,0">hours</TextBlock>
                                        <TextBlock x:Name="SessionClose_User_Total_Time_inMinutes" FontFamily="{StaticResource Base_Regular}" Foreground="White" VerticalAlignment="Bottom" FontSize="40" Margin="10,0,0,-10">12</TextBlock>
                                        <TextBlock x:Name="SessionClose_User_Total_Time_inMinute_lable" FontFamily="{StaticResource Base_Regular}" Foreground="White" VerticalAlignment="Bottom"  Margin="2,0,0,0">minutes</TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
                <!--#endregion-->
                <!--<Grid x:Name="Session_Close_Pannel">

                </Grid>-->
            </Grid>
            <!--#endregion-->
        </DockPanel>
        <!--#region Error | Pop Up-->
        <Grid x:Name="Error_page"  Visibility="Hidden" HorizontalAlignment="Stretch" Height="Auto"  Width="Auto">
            <Grid>
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.1" />
                </Grid.Background>
            </Grid>
            <Grid x:Name="Session_Check" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="Auto" Height="228" Background="{StaticResource CartBlueBrush}" Visibility="Hidden">
                <StackPanel   Orientation="Horizontal"  VerticalAlignment="Center"  HorizontalAlignment="Stretch">
                    <materialDesign:PackIcon  Kind="AlertCircleOutline" Width="Auto" Height="120" Foreground="White" />
                    <StackPanel>
                        <StackPanel VerticalAlignment="Center"  >
                            <TextBlock x:Name="SessionHead" Visibility="Hidden" FontFamily="{StaticResource Base_Regular}" Foreground="White" FontSize="25" FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5">Session Alert</TextBlock>
                            <TextBlock x:Name="SessionDescription" FontFamily="{StaticResource Base_Regular}" Foreground="White" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,10,0,0">Do You Want to Resume Session Or Close the Session ?</TextBlock>
                            <TextBox PreviewTextInput="txt_Price_PreviewTextInput" PreviewKeyDown="txt_Price_PreviewKeyDown"
                                Tag="Price" GotFocus="txt_Price_GotFocus" MaxLength="8"
                                Style="{StaticResource Regular_TextBox}"
                                FontSize="20"
                                BorderThickness="1"
                                FontFamily="{StaticResource ooredoo-Regular}"
                                x:Name="txt_Price"  Margin="0,30,0,0"
                                Padding="5" Height="Auto" ></TextBox>

                            <DockPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" >
                                <Button  Margin="5" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Stretch" x:Name="CancelNo"     Height="35" Click="CancelNo_Click">No (Esc)</Button>
                                <Button   Margin="5" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Stretch" x:Name="CancelYes"     Height="35" Click="CancelYes_Click">Yes (Y)</Button>
                                <Button   Margin="5" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Stretch" x:Name="CustLeft"    Height="35" Click="CustLeft_Click">Customer Left (F1)</Button>
                                <Button   Margin="3" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Stretch" x:Name="WrongOrder"   Height="35" Click="WrongOrder_Click"  >Wrong Order (F2)</Button>

                                <Button  Margin="5" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Stretch" x:Name="SessionCreateNew"    Height="35" Click="SessionCreateNew_Click" >Create</Button>
                                <TextBox PreviewTextInput="txt_Price_PreviewTextInput"  PreviewKeyDown="txt_openingBal_PreviewKeyDown"
                                Tag="Opening Balance" GotFocus="txt_Price_GotFocus" 
                                Style="{StaticResource Regular_TextBox}"
                                FontSize="20"    MaxLength="8"
                                BorderThickness="1" Width="170"
                                FontFamily="{StaticResource ooredoo-Regular}"
                                x:Name="txt_openingBal"  
                                Padding="5" Height="Auto" ></TextBox>
                                <Button  Margin="3" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Stretch" x:Name="SessionResume"   Height="35"  Click="SessionResume_Click">Resume (F4)</Button>
                                <Button  Margin="3" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Stretch" x:Name="SessionClose"     Height="35" Click="SessionClose_Click" >Close (F5)</Button>
                                <Button   Margin="5" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Stretch" x:Name="SessionChangePrice"   Height="35" Click="SessionChangePrice_Click" >Change (F5)</Button>
                            </DockPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid x:Name="Logout_Check" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="228" Background="{StaticResource CartBlueBrush}" Visibility="Hidden"   >
                <Button x:Name="LogoutCheckClose" Click="LogoutCheckClose_Click" Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0">
                    <materialDesign:PackIcon Kind="CloseCircleOutline" Width="50" Height="50" Foreground="White" />
                </Button>
                <StackPanel Orientation="Horizontal"  VerticalAlignment="Center" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="AlertCircleOutline" Width="120" Height="120" Foreground="White" />
                    <StackPanel>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock FontFamily="{StaticResource Base_Regular}" Foreground="White" FontSize="25" FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5">Logout Alert</TextBlock>
                            <TextBlock FontFamily="{StaticResource Base_Regular}" Foreground="White" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,10,0,0">Do You Want to Logout Or Close the Session ?</TextBlock>
                            <DockPanel VerticalAlignment="Center" Margin="0,20">
                                <Button   DockPanel.Dock="Right" Margin="3" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right" x:Name="SessionLogout"  Width="125" Height="35"  Click="SessionLogout_Click">Logout</Button>
                                <!--<Button DockPanel.Dock="Right" Margin="5" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right" x:Name="SessionCreateNew"  Width="110"  Height="40" Click="SessionCreateNew_Click" >Create New</Button>-->
                                <Button DockPanel.Dock="Right" Visibility="Hidden" Margin="3" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right" x:Name="SessionCloseLogout"  Width="125"  Height="35" Click="SessionClose_Click" >Close Session</Button>
                            </DockPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid x:Name="LoginError" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="228" Background="{StaticResource CartBlueBrush}" Visibility="Hidden">

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AlertCircleOutline" Width="120" Height="120" Foreground="White" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock FontFamily="{StaticResource Base_Regular}" Foreground="White" FontSize="25" FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5">Login Error</TextBlock>
                            <TextBlock FontFamily="{StaticResource Base_Regular}" Foreground="White" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,10,0,0">User Authentication Failed.Please Login Again.</TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <!--<Border Width="100" Margin="0" HorizontalAlignment="Right" BorderBrush="{StaticResource CartBlueBrush}" BorderThickness="1">-->
                    <!--<Button Width="110" Height="37" Margin="0" HorizontalAlignment="Right"  Style="{StaticResource ErrorPoPBtn}" VerticalAlignment="Center" x:Name="BackToLogin" Click="BackToLogin_Click" Background="White" Foreground="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1"  FontFamily="{StaticResource Base_Regular}" FontSize="12" >OK</Button>-->
                    <Button x:Name="BackToLogin" Click="BackToLogin_Click"  Margin="3" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right" Width="100"  Height="35" >OK</Button>
                </StackPanel>
            </Grid>
            <Grid x:Name="NetworkError_for_getting_invoice" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="228" Background="{StaticResource CartBlueBrush}" Visibility="Hidden">

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AlertOutline" Width="120" Height="120" Foreground="White" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="NetworkRetry_for_getting_invoice_text_l1" FontFamily="{StaticResource Base_Regular}" Foreground="White" FontSize="25" FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5">Network Error</TextBlock>
                            <TextBlock x:Name="NetworkRetry_for_getting_invoice_text_l2" FontFamily="{StaticResource Base_Regular}" Foreground="White" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,10,0,0">No Internet Connection.</TextBlock>
                            <TextBlock x:Name="NetworkRetry_for_getting_invoice_text_l3" FontFamily="{StaticResource Base_Regular}" Foreground="White" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,10,0,0">You Are Out Of Invoice Number.Please Connect To Any Network.</TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <!--<Border Width="100" Margin="0" HorizontalAlignment="Right" BorderBrush="{StaticResource CartBlueBrush}" BorderThickness="1">-->
                    <Grid  HorizontalAlignment="Right">

                        <!--<Button Width="110" Height="37" Margin="0" HorizontalAlignment="Right"  Style="{StaticResource ErrorPoPBtn}" VerticalAlignment="Center" x:Name="NetworkRetry_for_getting_invoice_bt" Click="NetworkRetry_for_getting_invoice_bt_Click" Background="White" Foreground="{StaticResource CartBlueBrush}" BorderBrush="{StaticResource CartBlueBrush}" BorderThickness="1"  FontFamily="{StaticResource Base_Regular}" FontSize="12" >Retry</Button>-->
                        <Button Margin="3" Style="{StaticResource ErrorPoPBtn}" Padding="2"  FontFamily="{StaticResource Base_Regular}" Background="{StaticResource CartBlueBrush}" BorderBrush="White" BorderThickness="1.5" Foreground="White" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right" x:Name="NetworkRetry_for_getting_invoice_bt" Click="NetworkRetry_for_getting_invoice_bt_Click"  Width="100"  Height="35" >Retry</Button>
                        <ProgressBar x:Name="NetworkRetry_for_getting_invoice_ProgressBar" Visibility="Hidden"
                              Style="{StaticResource MaterialDesignCircularProgressBar}"
                              IsIndeterminate="True" Height="25" Width="25"
                               Foreground="White" />
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
        <!--#endregion-->
        <ProgressBar x:Name="RetailProgressBar"
            Foreground="{StaticResource CartBlueBrush}"
           VerticalAlignment="Bottom" Visibility="Hidden" Margin="0,0,0,120"  Height="55" Width="55"></ProgressBar>
        <!--<Controls:ProgressRing  />-->
    </Grid>
</Page>