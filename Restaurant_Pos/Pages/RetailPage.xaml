<Page x:Class="Restaurant_Pos.Pages.RetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:sys="clr-namespace:System;assembly=mscorlib" 
      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:local="clr-namespace:Restaurant_Pos.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:uc="clr-namespace:Restaurant_Pos.Pages.UserControls"  
       xmlns:ctr1="clr-namespace:Gui.Controls;assembly=Gui.Controls"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="RetailPage" Background="White" Name="MainPage"  PreviewKeyUp="Page_PreviewKeyDown"  Loaded="Window_Loaded">
    <Page.Resources>
        <Storyboard x:Key="sbShowRightMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,-150,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
        <Storyboard x:Key="sbHideRightMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,0,-150,0" AccelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase }">
            <Border Background="{TemplateBinding Background}" 
            x:Name="Bd"  BorderBrush="{StaticResource CartBorderGreyBrush}"
            BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="18">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsFocused" Value="true">
                    <Setter Property="Background" Value="{StaticResource CartBorderGreyBrush}" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="Button" x:Key="MyFocusVisual">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="true">
                    <Setter Property="Background" Value="{StaticResource CartBlueBrush}" />
                </Trigger>
            </Style.Triggers>

            <Setter Property="Background" Value="{StaticResource CartBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>

        </Style>
        <Style x:Key="BorderStyle">
            <Setter Property="Control.BorderBrush" Value="#A0A1A2" />
            <Setter Property="Control.BorderThickness" Value="1" />
            <Setter Property="Control.Background" Value="Transparent" />
            <Setter Property="Control.Foreground" Value="#101010" />
            <Setter Property="Control.FontFamily" Value="Arial" />
            <Setter Property="Control.FontWeight" Value="Normal" />
            <Setter Property="Control.FontStretch" Value="Normal" />
            <Setter Property="Control.FontStyle" Value="Normal" />

        </Style>
        <Style x:Key="ComboBoxButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border    BorderBrush="{StaticResource CartBorderGreyBrush}" 
            BorderThickness="{TemplateBinding BorderThickness}"   
             x:Name="border"    Background="{StaticResource CartToggleGrayBrush }" 
             CornerRadius="0,18,18,0"   >
                            <ContentPresenter />
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="ComboBackgroundBrush" Color="#EAEAEA" />

        <Style x:Key="ComboBoxTextBoxStyle" TargetType="{x:Type TextBox}">
            <!-- 
    Must set this in a setter, not an an attribute on the control instance.
    The attribute you had will override anything the style does. This is part of 
    "dependency property value precedence". 
    -->
            <Setter Property="Background" Value="{StaticResource ComboBackgroundBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border CornerRadius="18,0,0,18"
                            BorderThickness="1,1,0,1"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#A0A1A2"
                            >
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="ComboBoxOverlayToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="ClickMode" Value="Press" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Background="Transparent" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundComboBox" TargetType="{x:Type ComboBox}" BasedOn="{StaticResource BorderStyle}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14px"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition MaxWidth="18"/>
                            </Grid.ColumnDefinitions>

                            <ToggleButton
                        Grid.Column="0"
                        Style="{StaticResource ComboBoxOverlayToggleButtonStyle}"
                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                        />

                            <!--
                    Two problems: 
                        1. IsHitTestVisible="False" prevented it from getting any mouse messages.
                        2. Background attribute was overriding anything the Style did,
                           so even if the trigger had fired, its setter would have failed. 
                    Also, Height="{TemplateBinding Height}" is unnecessary. It'll size to its parent Grid.
                    And BorderBrush="#A0A1A2" should probably be in the Style
                    -->
                            <TextBox Name="PART_EditableTextBox"
                             Padding="0,0,0,0"
                             BorderBrush="#A0A1A2"
                             Style="{StaticResource ComboBoxTextBoxStyle}"
                             Background="{TemplateBinding Background}"
                             IsHitTestVisible="{TemplateBinding IsEditable}"
                             />

                            <ToggleButton Grid.Column="1" 
                                  Height="{TemplateBinding Height}"
                                  Style="{StaticResource ComboBoxButtonStyle}"
                                  Focusable="False"
                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                  ClickMode="Press"
                                  Background="{TemplateBinding Background}"
                                  >
                                <Path Grid.Column="1"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="M 0 0 L 4 4 L 8 0 Z"
                              Fill="Black" />
                            </ToggleButton>

                            <ContentPresenter Grid.Column="0" 
                                      Name="ContentSite"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      Margin="6,0,0,0"
                                      />

                            <Popup Grid.Column="0" 
                           Name="Popup"   
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True" 
                           Focusable="False"
                           PopupAnimation="Slide">

                                <Grid Name="DropDown" 
                              SnapsToDevicePixels="True"                
                              MinWidth="{TemplateBinding ActualWidth}"
                              MaxHeight="{TemplateBinding MaxDropDownHeight}">

                                    <Border x:Name="DropDownBorder"
                                    BorderThickness="1"
                                    CornerRadius="2"
                                    Background="White"
                                    BorderBrush="#A0A1A2"/>
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>

                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="FlatButtonStyle">
            <Setter Property="Background" Value="{StaticResource CartBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderThickness="0"
                        Background="{TemplateBinding Background}"
                        CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="Productviewfield">
            <Setter Property="Margin" Value="20,20,0,0"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Google Sans"/>
            <Setter Property="Foreground" Value="{StaticResource CartGrayBrush}"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>
        <Style TargetType="Image" x:Key="ProductviewfieldImage">
            <Setter Property="Margin" Value="20,20,0,0"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="Productview">

            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Google Sans"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="lstProductview">

            <Setter Property="Margin" Value="0,3,0,0"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Google Sans"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>
        <Style TargetType="Button" x:Key="FlatButtonStyle1">
            <Setter Property="Background" Value="{StaticResource CartBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderThickness="0"
                        Background="{TemplateBinding Background}"
                        CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="alternatingStyle" TargetType="ListViewItem">
            <Setter Property="FontSize" Value="3" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontStyle" Value="Italic" />
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex"  Value="1">
                    <Setter Property="Background" Value="{StaticResource CartBorderGreyBrush}" />
                    <Setter Property="Height" Value="40" />
                    <Setter Property="FontWeight" Value="Bold" />

                </Trigger>
                <Trigger Property="ItemsControl.AlternationIndex"  Value="0">
                    <Setter Property="Height" Value="40" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid Name="RetailGrid">
        <DockPanel LastChildFill="True" x:Name="Retail_Page" Visibility="Visible">
            <!--#region Tittle Bar-->
            <Grid DockPanel.Dock="Top" VerticalAlignment="Top" Height="30">
                <Border BorderBrush="{StaticResource CartGrayBrush}" BorderThickness="0,0,1,0" />
                <DockPanel>
                    <Image DockPanel.Dock="Left" Source="/Restaurant_Pos;component/Resources/Images/Icons/Zearo/logo 32x32.png"
                       Width="25" Height="Auto" Margin="5,5,0,5"
                       HorizontalAlignment="Left" />
                    <TextBlock
                        DockPanel.Dock="Left"
                        Text="QSale"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Base_Regular}"
                        Foreground="{StaticResource TextBrush}" />
                    <Ellipse
                        x:Name="NetworkIndicatorIcon"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        Margin="5,0,0,0"
                        Width="13"
                        Height="13"
                        Fill="Red" />
                    <DockPanel x:Name="Tittle_Bar_Right_Content" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <Button DockPanel.Dock="Right" HorizontalAlignment="Right"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="MenuNavigation_but"
                        Padding="0"
                        Margin="5,-4,5,0"
                        VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                            <materialDesign:PackIcon Kind="DotsHorizontal" Foreground="{StaticResource TextBrush}" Height="40" Width="40" />
                        </Button>

                        <Button
                        DockPanel.Dock="Right"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Foreground="{StaticResource TextBrush}" Margin="0" Padding="0"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Right">
                            <materialDesign:PackIcon Kind="Account" Foreground="{StaticResource TextBrush}" Height="20" Width="20" />
                        </Button>

                        <TextBlock
                        x:Name="Tittle_bar_User_Role"
                        DockPanel.Dock="Right"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontFamily="{StaticResource Base_Regular}"
                        Foreground="{StaticResource TextBrush}"
                        Margin="0,6,5,0"
                        Text="Casher" Padding="0" Height="20" />

                        <TextBlock
                        DockPanel.Dock="Right" x:Name="lblTime"
                        FontSize="15" HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,5,5,0"
                        FontFamily="{StaticResource Base_Regular}"
                        Foreground="{StaticResource TextBrush}" />
                    </DockPanel>
                </DockPanel>
            </Grid>

            <!--#endregion-->
            <!--#region Sales Screens-->
            <Grid>
                <!--#region Cart Main Pannel -->
                <Grid x:Name="Cart_Main_Pannel" Visibility="Visible" Focusable="True">
                    <!--#region Cart Main Screen-->
                    <Grid x:Name="Cart_Main_Pannel_Window" Visibility="Visible" Focusable="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!--Left Side Dynamic-->
                        <Grid Grid.Column="0" x:Name="Left_Cart_Main_Screen" Visibility="Visible" Focusable="True"  KeyboardNavigation.TabNavigation="Cycle">
                            <!--Cart Main Screen-->
                            <DockPanel LastChildFill="True"
                            x:Name="Cart_Main_Page"
                            Visibility="Visible">
                                <Border DockPanel.Dock="Top" BorderBrush="{StaticResource CartBorderGreyBrush}" BorderThickness="0,1,0,0">
                                    <DockPanel LastChildFill="True"
                                    Margin="2,0,0,0"
                                    Height="30"  VerticalAlignment="Top" HorizontalAlignment="Stretch">

                                        <!--Search Bar-->
                                        <!--<Button Style="{StaticResource IconButtonNE}" Content="{StaticResource searchIcon}" Foreground="#939393" Margin="2" Padding="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"></Button>-->
                                        <materialDesign:PackIcon DockPanel.Dock="Left" Kind="Magnify" Foreground="#939393" Margin="2" Padding="10" VerticalAlignment="Center" HorizontalAlignment="Center"  Width="Auto" Height="Auto" />
                                        <Grid Width="Auto" HorizontalAlignment="Stretch">
                                            <DockPanel LastChildFill="True" x:Name="BarcodeSearch_bar" HorizontalAlignment="Stretch">
                                                <StackPanel>
                                                    <TextBox   Width="500" KeyboardNavigation.TabIndex="0"
                                                        DockPanel.Dock="Left"
                                                        x:Name="productSearch_cart" 
                                                        Style="{StaticResource Regular_TextBox}"
                                                        FontFamily="{StaticResource Base_Regular}"
                                                        Foreground="{StaticResource TextBrush}"
                                                        FontSize="15"
                                                        GotFocus="BarcodeSearch_cart_GotFocus"
                                                        Tag="Search by ( barcode-[F6] | Description-[Alt] )" HorizontalAlignment="Stretch"
                                                        Margin="0" Padding="0" HorizontalContentAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        VerticalContentAlignment="Center" KeyDown="productSearch_cart_KeyDown"></TextBox>

                                                </StackPanel>
                                                <StackPanel KeyboardNavigation.TabNavigation="None">
                                                    <Button x:Name="exchange_items"  Click="Exchange_items_Click" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Right" Width="30" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Margin="2" Padding="2">
                                                        <Image Source="/Restaurant_Pos;component/Resources/Images/Icons/scan invoice/scan invoice-01.png"></Image>
                                                    </Button>
                                                    <Button x:Name="barcode_search"   Click="Barcode_search_Click" Foreground="{StaticResource TextBrush}" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Right" Width="40" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Margin="2" Padding="2">
                                                        <Image Source="/Restaurant_Pos;component/Resources/Images/Icons/barcode/barcode (3).png"></Image>
                                                    </Button>
                                                </StackPanel>
                                               
                                            </DockPanel>
                                            <!--Payment Page-->
                                            <TextBox  
                                        Grid.Column="1" IsTabStop="True"
                                        x:Name="Exchange_Invoice_Number_Search"  
                                        KeyDown="Exchange_Invoice_Number_Search_KeyDown"
                                        Style="{StaticResource Regular_TextBox}"
                                        FontFamily="{StaticResource Base_Regular}"
                                        FontSize="15"
                                        GotFocus="Exchange_Invoice_Number_Search_GotFocus"
                                        Tag="Enter Invoice number to exchange" HorizontalAlignment="Stretch"
                                        Margin="0" Padding="0" HorizontalContentAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center"
                                        Visibility="Hidden" TextChanged="Exchange_Invoice_Number_Search_TextChanged" />
                                        </Grid> 
                                        <!--END-->
                                    </DockPanel>
                                </Border>
                                <!--Grand Total Bar-->
                                <Grid DockPanel.Dock="Top" Height="110" VerticalAlignment="Top" Background="#2D3E50" KeyboardNavigation.TabNavigation="None">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="2.5*" />
                                    </Grid.RowDefinitions>

                                    <DockPanel Margin="9,0,9,0">
                                        <!--Total Iteams count-->

                                        <TextBox x:Name="Cart_Iteam_Count" Text="0"
                                        DockPanel.Dock="Left"
                                        FontFamily="{StaticResource Base_Regular}"
                                        FontSize="15"
                                        Foreground="White"
                                        Margin="0"
                                        Style="{StaticResource Regular_TextBox_VaUp}" />
                                        <TextBlock Text="Items"
                                        FontFamily="{StaticResource Base_Regular}"
                                        FontSize="15"
                                        DockPanel.Dock="Left"
                                        Foreground="White"
                                        HorizontalAlignment="Left" VerticalAlignment="Center"
                                        Margin="0" />
                                        <!--Total-->

                                        <TextBlock  Name="txtActualtotal"
                                        FontFamily="{StaticResource Base_Regular}"
                                        FontSize="20"
                                        FontWeight="Light"
                                        Foreground="White"
                                        DockPanel.Dock="Right"
                                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20,0,6,0" />
                                        <TextBlock Text="QR |" Name="txtactualamountqr"
                                        FontFamily="{StaticResource Base_Regular}"
                                        FontSize="10"
                                        FontWeight="Light"
                                        Foreground="White"
                                        DockPanel.Dock="Right"
                                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,0,6,7" />
                                        <TextBlock Text="Total"
                                        FontFamily="{StaticResource Base_Regular}"
                                        FontSize="15"
                                        Foreground="White"
                                        DockPanel.Dock="Right"
                                        HorizontalAlignment="Right" VerticalAlignment="Center"
                                        Margin="0" />
                                    </DockPanel>

                                    <DockPanel Grid.Row="1" Margin="9,0,9,0">
                                        <!--OverAll Discount Button-->
                                        <Button DockPanel.Dock="Left"
                                        x:Name="OverAllDiscount_button"
                                        HorizontalAlignment="Left"
                                        Width="100"
                                        Height="55"
                                        Background="#FF7F00"
                                        Margin="0"
                                        Padding="0"
                                        BorderBrush="#FF7F00"
                                        BorderThickness="2" Click="OverAllDiscount_Click">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox x:Name="OverAllDiscount_tx" Text="0"
                                                DockPanel.Dock="Left"
                                                FontSize="20"
                                                Foreground="White"
                                                Margin="0" Padding="0"
                                                Style="{StaticResource Regular_TextBox_VaUp}"
                                                IsHitTestVisible="False" />
                                                <TextBox x:Name="OverAllDiscount_sy" Text="QR"
                                                DockPanel.Dock="Left"  
                                                FontSize="20"
                                                Foreground="White"
                                                Margin="0" Padding="0"
                                                Style="{StaticResource Regular_TextBox_VaUp}"
                                                IsHitTestVisible="False" />
                                            </StackPanel>
                                        </Button>
                                        <TextBlock Text="[F4]"  Name="OverAllDiscount_button_short"
                                        FontFamily="{StaticResource Base_Regular}"
                                        FontSize="10"
                                        FontWeight="Light"
                                        Foreground="White"
                                        DockPanel.Dock="Left"
                                        HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,11" />
                                        <TextBox x:Name="Grand_Total_cart_price" Text="0.00"
                                        DockPanel.Dock="Right"
                                        FontFamily="{StaticResource Base_Regular}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        FontSize="60"
                                        Foreground="White"
                                        Margin="0"
                                        Padding="0"
                                        Style="{StaticResource Regular_TextBox_VaUp}" />
                                        <TextBlock Text="QR"
                                        FontFamily="{StaticResource Base_Regular}"
                                        FontSize="20"
                                        FontWeight="Light"
                                        Foreground="White"
                                        DockPanel.Dock="Right"
                                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,6,11" />
                                    </DockPanel>
                                </Grid>
                                <!--Left Conten Page -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="55*"/>
                                        <ColumnDefinition Width="559*"/>
                                    </Grid.ColumnDefinitions>
                                    <!--Line Product Iteam -->
                                    <ListView x:Name="iteamProduct" Visibility="Visible"
                                    ItemsSource="{Binding ProductIteams}"  KeyboardNavigation.TabIndex="1"
                                    Background="{x:Null}" PreviewKeyUp="iteamProduct_PreviewKeyUp" 
                                    SelectionChanged="IteamProduct_SelectionChanged"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    HorizontalAlignment="Stretch" Grid.ColumnSpan="2">

                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid HorizontalAlignment="Stretch" Margin="-4.355" Height="80" KeyboardNavigation.TabNavigation="None">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="70*" />
                                                        <ColumnDefinition Width="283*" />
                                                        <ColumnDefinition Width="100*" />
                                                        <ColumnDefinition Width="100*" />
                                                        <ColumnDefinition Width="100*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Separator Grid.ColumnSpan="5" VerticalAlignment="Bottom" />
                                                    <!--Delete-->
                                                    <Grid Grid.Column="0" Margin="5,0,0,0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="3*" />
                                                            <RowDefinition Height="2*" />
                                                        </Grid.RowDefinitions>

                                                        <Button Style="{StaticResource IconButton}" Grid.Column="0"
                                                        Content="{StaticResource trash3Icon}"
                                                        FontFamily="{StaticResource FontAwesomeSolid}"
                                                        Foreground="Red"
                                                        Background="Transparent"
                                                        Width="25" Height="27"
                                                         Padding="0" KeyboardNavigation.TabNavigation="None"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Click="DeleteCart_LineIteam_Click" Margin="5,10,0,0" >
                                                        </Button>
                                                        <StackPanel Grid.Row="1"  Orientation="Horizontal" Margin="0">
                                                            <TextBlock Text="[Delete]" Grid.Column="0"
                                                                FontFamily="{StaticResource Base_Regular}"
                                                                FontSize="10" Foreground="{StaticResource CartBlueBrush}"
                                                                FontWeight="Bold" 
                                                                DockPanel.Dock="Left"
                                                                HorizontalAlignment="Left" VerticalAlignment="Center" 
                                                               Margin="20,-20,0,0" />
                                                        </StackPanel>
                                                    </Grid>


                                                    <!--Product Name |Barcode|Price-->
                                                    <Grid Grid.Column="1" Margin="20,0,0,0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="3*" />
                                                            <RowDefinition Height="2*" />
                                                        </Grid.RowDefinitions>

                                                        <!--<ScrollViewer
                                                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                        ScrollViewer.VerticalScrollBarVisibility="Hidden">-->
                                                        <TextBox x:Name="Discount_Cart_LineIteam"  Grid.Row="0"
                                                            Text="{Binding Product_Name}"
                                                            DockPanel.Dock="Left"
                                                            FontSize="22" KeyboardNavigation.TabNavigation="None"
                                                            Foreground="{StaticResource TextBrush}"
                                                            FontFamily="{StaticResource Base_Regular}"
                                                            FontWeight="DemiBold"
