                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="100 x" Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,40,0" FontFamily="{StaticResource Base_Regular}" FontSize="15"  />
