                                            FontFamily="{StaticResource Base_Regular}"
                                            Margin="2,2,5,2" Padding="0"
                                            Height="Auto" Width="Auto"
                                            Background="White"
                                            BorderBrush="{StaticResource CartBorderGreyBrush}" />
