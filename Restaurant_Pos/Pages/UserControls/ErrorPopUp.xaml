<UserControl x:Class="Restaurant_Pos.Pages.UserControls.ErrorPopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Restaurant_Pos.Pages.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="AliceBlue" Width="Auto" Height="aUTO">

        <TextBlock FontFamily="{StaticResource ooredoo-Regular}" FontSize="15"  HorizontalAlignment="Center" Margin="0,10,0,0">Login Error</TextBlock>
        <Separator VerticalAlignment="Top" Margin="0,30,0,0"></Separator>
        <TextBlock FontFamily="{StaticResource ooredoo-Regular}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center">Please Login Again</TextBlock>
        <Button VerticalAlignment="Center" x:Name="BackToLogin" Click="BackToLogin_Click" Width="200" Margin="0,80,0,0">Back To Login</Button>
    </Grid>
</UserControl>