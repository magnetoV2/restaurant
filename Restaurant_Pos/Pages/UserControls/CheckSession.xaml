<UserControl x:Class="Restaurant_Pos.Pages.UserControls.CheckSession"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Restaurant_Pos.Pages.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid Background="AliceBlue" Width="Auto" Height="Auto">

        <TextBlock FontFamily="{StaticResource ooredoo-Regular}" FontSize="15"  HorizontalAlignment="Center" Margin="0,10,0,0">Session Status</TextBlock>
        <Separator VerticalAlignment="Top" Margin="0,30,0,0"></Separator>
        <TextBlock FontFamily="{StaticResource ooredoo-Regular}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center">Please Resume or Create to Proceed </TextBlock>
        <StackPanel VerticalAlignment="Center"  Margin="0,80,0,0" Orientation="Horizontal" Width="300">
            <Button VerticalAlignment="Bottom" x:Name="SessionResume"  Width="105" Margin="2" Click="SessionResume_Click">Resume</Button>
            <Button VerticalAlignment="Bottom" x:Name="SessionCreateNew"  Width="105"  Margin="82,2,2,2" Click="SessionCreateNew_Click" >Create New</Button>
        </StackPanel>
    </Grid>
</UserControl>